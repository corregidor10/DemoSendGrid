@using System.ComponentModel
@{
    ViewBag.Title = "EnviarCorreo";

}
<body style="background-color: lightsalmon; margin: 0;">
<div class="col-md-2" style="float: left"></div>

<div class="col-md-10"  style="float: left; padding: 1%" >
        <h2>EnviarCorreo</h2>
        @using (Html.BeginForm("EnviarCorreo", "Correo", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <div class="form-group">
                    @Html.Label("Destino", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBox("Destino", null, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Asunto", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="radio">
                        @Html.RadioButton("Asunto", "RRHH", new { @class = "radio-inline" }) @Html.Label("RRHH")
                        @Html.RadioButton("Asunto", "PRD", new { @class = "radio-inline" })@Html.Label("PRD")
                        @Html.RadioButton("Asunto", "VENTAS", new { @class = "radio-inline" }) @Html.Label("Si")
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Mensaje")
                    <div class="col-md-10">
                        @Html.TextArea("Mensaje", null, new { style = "width:400px; background-color: lightcyan", maxlength = 500, @class = "form-control", rows = "10" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Enviar Correo" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

    </div>
</body>